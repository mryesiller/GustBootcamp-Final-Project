{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "outDir": "./build",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "baseUrl": ".", 
      "paths": {
         "*":[
            "node_modules/*",
            "src/types/*"
         ]
      }
      
   },
   "include": [
      "src/**/*"
    ]
    
}